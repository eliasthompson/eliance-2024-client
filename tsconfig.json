{
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@fonts": ["public/fonts"],
      "@fonts/*": ["public/fonts/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@types": ["types"],
      "@types/*": ["types/*"]
    },
    "target": "ES2022"
  }
}